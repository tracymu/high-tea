<div class="antialiased off-canvas hide-extras">

  <%= simple_form_for @visit do |f| %>

    <div class = "row">
      <div class = "large-4 columns">
           <%= f.input :venue %>
      </div> 
    </div>
      
    <div class="row">
      <div class = "large-4 columns">
        <%= f.input :city %>
      </div>
    </div>

    <div class="row">
      <div class = "large-2 columns">
        <%= f.input :date, as: :date, default: Date.today, :start_year => 2005, :end_year => Time.now.year, discard_day: true, order: [:month, :year], input_html: {style: 'inline'}  %>
      </div>
    </div>
     
    <div class = "row">
      <div class = "large-3 columns">
          <%= f.label "Price" %>
          <%= f.text_field :price_cents %>
          <%= f.select :price_currency, Visit::CURRENCIES %>
      </div>
    </div>

    <div class = "row">
      <div class = "large-2 columns">
        <%= f.input :tea, collection: (0..5).step(0.5).to_a%>
      </div>

      <div class = "large-2 columns">
        <%= f.input :scones, collection: (0..5).step(0.5).to_a %>  
      </div>

      <div class = "large-2 columns">
        <%= f.input :savoury, collection: (0..5).step(0.5).to_a %> 
      </div>

      <div class = "large-2 columns">   
        <%= f.input :sweets, collection: (0..5).step(0.5).to_a %>  
      </div>

      <div class = "large-2 columns">   
      </div>

      <div class = "large-2 columns">     
      </div>
    </div>

    <div class = "row">
      <div class = "large-2 columns">
        <%= f.input :ambience, collection: (0..5).step(0.5).to_a  %>  
      </div>

      <div class = "large-2 columns">
        <%= f.input :service, collection: (0..5).step(0.5).to_a %> 
      </div>
      
      <div class = "large-2 columns">
        <%= f.input :bonus, collection: (0..2).step(0.5).to_a %>  
      </div>

      <div class = "large-2 columns"> 
      </div>
        
      <div class = "large-2 columns"> 
      </div>   

    </div>

    <div class = "row">
      <div class = "large-8 columns">
        <%= f.input :comments, input_html: {style: 'height:100px;'} %>
      </div>
    </div>

    <%= f.button :submit %>
  <% end %>
</div>