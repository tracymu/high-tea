      <div class = "large-2 columns">   

      </div>
        <div class = "large-2 columns">
     
      </div>
  

      <div class = "large-2 columns">     
      </div>
    </div>


<div class = "row">
        <div class = "large-2 columns">
            <%= f.input :ambience, collection: (0..5).step(0.5).to_a  %>  
        
        </div>

